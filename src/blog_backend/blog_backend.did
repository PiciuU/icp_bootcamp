type Blog = record {
    title: text;
    date: nat64;
    content: text;
    tags: vec text;
};

type Config = record {
    max_title_length: nat8;
    max_content_length: nat16;
    max_tags_count: nat8;
    tags: vec text;
};

type Result = variant { Ok : Blog; Err : text; };

service : {
    "add_config": (Config) -> ();
    "add_blog": (text, text, vec text) -> (Result);
    "get_blogs": () -> (vec Blog) query;
}
